# プロジェクト設定
PROJECT_NAME="My FastAPI App"
VERSION="1.0.0"

# 認証タイプ（setup.shで設定）
# jwt, login_password, oauth2, none
AUTH_TYPE=jwt

# データベースタイプ（setup.shで設定）
# postgresql, mysql, sqlite
DB_TYPE=postgresql

# セキュリティ（本番環境では必ず変更！）
# 生成コマンド: openssl rand -hex 32
SECRET_KEY="your-secret-key-here-change-in-production"

# JWT認証設定（AUTH_TYPE=jwtの場合）
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# セッション認証設定（AUTH_TYPE=login_passwordの場合）
SESSION_SECRET_KEY="your-session-secret-key-here"
SESSION_EXPIRE_MINUTES=60

# データベース設定（DB_TYPE=postgresqlの場合）
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=fastapi_db
POSTGRES_PORT=5432

# データベース設定（DB_TYPE=mysqlの場合）
# MYSQL_SERVER=localhost
# MYSQL_USER=root
# MYSQL_PASSWORD=password
# MYSQL_DB=fastapi_db
# MYSQL_PORT=3306

# データベース設定（DB_TYPE=sqliteの場合）
# SQLITE_DB_PATH=./data/app.db

# AI連携（プロバイダーの選択）
AI_PROVIDER=bedrock  # bedrock, openai, anthropic, gemini, など

# AWS Bedrock（AI_PROVIDER=bedrockの場合）
# 認証: aws login
AWS_REGION=us-east-1
AWS_BEDROCK_MODEL_ID=us.anthropic.claude-sonnet-4-5-20250929-v1:0

# OpenAI（AI_PROVIDER=openaiの場合、将来実装）
# OPENAI_API_KEY=sk-...

# Anthropic API（AI_PROVIDER=anthropicの場合、将来実装）
# ANTHROPIC_API_KEY=sk-ant-...

# CORS（フロントエンドのURL）
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# ロギング
LOG_LEVEL=INFO
LOG_FORMAT=json
